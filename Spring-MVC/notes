# Creating a new user in the database

create database db_example; -- Create the new database
create user 'springuser'@'%' identified by 'ThePassword'; -- Creates the user
grant all on db_example.* to 'springuser'@'%'; -- Gives all the privileges to the new user on the newly created database

# Insert a user in the database

curl --header "Content-Type: application/json" --request POST --data '{"name":"John"}' http://localhost/add

